<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".Grievance">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F5F5">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/approvalDetail_back_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="42dp"
            android:background="@drawable/back_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/approvalDetail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="Member Approval"
            android:textColor="@color/black"
            android:textSize="26sp"
            app:layout_constraintStart_toEndOf="@id/approvalDetail_back_button"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/member_approval_name_heading"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/inria_sans_regular"
            android:padding="5dp"
            android:textColor="@color/black"
            android:text="NAME"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/approvalDetail_title"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/new_member_name"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/edittext_style_white_smaller"
            android:fontFamily="@font/inria_sans_regular"
            android:importantForAutofill="no"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/member_approval_name_heading"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/member_approval_email_heading"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/inria_sans_regular"
            android:padding="5dp"
            android:textColor="@color/black"
            android:text="EMAIL"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/new_member_name"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/new_member_email"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/edittext_style_white_smaller"
            android:fontFamily="@font/inria_sans_regular"
            android:importantForAutofill="no"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/member_approval_email_heading"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/member_approval_company_heading"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/inria_sans_regular"
            android:padding="5dp"
            android:textColor="@color/black"
            android:text="COMPANY NAME"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/new_member_email"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/new_member_company"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/edittext_style_white_smaller"
            android:fontFamily="@font/inria_sans_regular"
            android:importantForAutofill="no"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/member_approval_company_heading"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/member_approval_turnover_heading"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/inria_sans_regular"
            android:padding="5dp"
            android:textColor="@color/black"
            android:text="COMPANY TURNOVER"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/new_member_company"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/new_member_turnover"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/edittext_style_white_smaller"
            android:fontFamily="@font/inria_sans_regular"
            android:importantForAutofill="no"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/member_approval_turnover_heading"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/member_approval_industrytype_heading"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/inria_sans_regular"
            android:padding="5dp"
            android:textColor="@color/black"
            android:text="INDUSTRY TYPE"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/new_member_turnover"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/new_member_industrytype"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/edittext_style_white_smaller"
            android:fontFamily="@font/inria_sans_regular"
            android:importantForAutofill="no"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/member_approval_industrytype_heading"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/member_approval_membershiptype_heading"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/inria_sans_regular"
            android:padding="5dp"
            android:textColor="@color/black"
            android:text="MEMBERSHIP TYPE"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/new_member_industrytype"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/new_member_membershiptype"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/edittext_style_white_smaller"
            android:fontFamily="@font/inria_sans_regular"
            android:importantForAutofill="no"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/member_approval_membershiptype_heading"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/member_approval_payinglater_heading"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/inria_sans_regular"
            android:padding="5dp"
            android:textColor="@color/black"
            android:text="AMOUNT PAYING LATER"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/new_member_membershiptype"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/new_member_payinglater"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/edittext_style_white_smaller"
            android:fontFamily="@font/inria_sans_regular"
            android:importantForAutofill="no"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/member_approval_payinglater_heading"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/member_approval_paymentReceiverr_heading"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/inria_sans_regular"
            android:padding="5dp"
            android:textColor="@color/black"
            android:text="PERSON RECEIVING THE PAYMENT"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/new_member_payinglater"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/new_member_paymentReceiver"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/edittext_style_white_smaller"
            android:fontFamily="@font/inria_sans_regular"
            android:importantForAutofill="no"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/member_approval_paymentReceiverr_heading"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/member_approval_phoneno_heading"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/inria_sans_regular"
            android:padding="5dp"
            android:textColor="@color/black"
            android:text="CONTACT NO."
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/new_member_paymentReceiver"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/new_member_phoneno"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/edittext_style_white_smaller"
            android:fontFamily="@font/inria_sans_regular"
            android:importantForAutofill="no"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/member_approval_phoneno_heading"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/member_approval_paymentproof_heading"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/inria_sans_regular"
            android:padding="5dp"
            android:textColor="@color/black"
            android:text="PAYMENT PROOF"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/new_member_phoneno"/>

        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/new_member_proof_img"
            android:layout_height="300dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@+id/member_approval_paymentproof_heading"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/approval_btn"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/button_style_black_smaller"
            android:fontFamily="@font/inter_semi_bold"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginBottom="16dp"
            android:text="Approve"
            android:layout_marginStart="24dp"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="#F5F5F5"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/new_member_proof_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/rejectionReason_btn"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/button_style_black_smaller"
            android:fontFamily="@font/inter_semi_bold"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="24dp"
            android:text="Reject"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="#F5F5F5"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/new_member_proof_img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />





    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>