<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CoreTeamMembers"
    android:background="@color/different_black">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/MOM_back_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/back_icon"
            android:backgroundTint="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="18dp"
            android:layout_marginTop="33dp"/>

        <TextView
            android:id="@+id/MOM_member_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Select Member of Month"
            android:fontFamily="@font/poppins_semi_bold"
            android:textColor="#FBFBFB"
            app:layout_constraintStart_toEndOf="@id/MOM_back_button"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/MOMdescription_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#969696"
            android:fontFamily="@font/poppins_regular"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/MOM_member_text"
            android:layout_marginTop="24dp"
            android:paddingStart="22dp"
            android:paddingEnd="22dp"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/MOM_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/MOMdescription_text"
            />





    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>